<?xml version="1.0"?>
<odoo>
    <data>
        <record id="product.variants_action" model="ir.actions.act_window">
            <field name="name">Attribute Values</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.attribute.value</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="view_variants_tree_inherit_luonto" model="ir.ui.view">
            <field name="name">product.attribute.value.tree</field>
            <field name="model">product.attribute.value</field>
            <field name="inherit_id" ref="product.variants_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//tree[1]" position="attributes">
                    <attribute name="editable"/>
                </xpath>
            </field>
        </record>

        <record id="product_attribute_value_form_luonto" model="ir.ui.view">
            <field name="name">product.attribute.value.form</field>
            <field name="model">product.attribute.value</field>
            <field name="arch" type="xml">
                <form string="Attribute Values">
                    <sheet>
                        <group>
                            <group>
                                <field name="attribute_id"/>
                                <field name="name"/>
                            </group>
                            <group>
                                <field name="html_color"/>
                                <field name="is_custom"/>
                            </group>
                        </group>
                        <group>
<!--                            <group>-->
                                <field name="is_not_buy"/>
                                <field name="attribute_value_ids">
                                    <tree>
                                        <field name="attribute_id"/>
                                        <field name="name"/>
                                        <field name="is_not_buy"/>
                                    </tree>
                                </field>
<!--                            </group>-->
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>